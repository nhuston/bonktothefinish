
  <% # Use title if it's in the page YAML frontmatter
    if current_page.data.dig(:title) then
      title = current_page.data.title
    else
      title = "BonkToTheFinish"
    end
  %>

<!doctype html xmlns="https://www.w3.org/1999/xhtml" xmlns:og="https://ogp.me/ns#" xmlns:fb="https://www.facebook.com/2008/fbml">
  <head>
    <%= partial "partials/ogp.erb", locals: {
        title: title,
        author: "Nicole Huston" } %>

    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico?" />
    <title><%= title %></title>


    <%= partial "partials/google_analytics.html" %>
    <%= partial "partials/email_subscribe_popup.erb" %>

    <!-- asset links -->
    <%= stylesheet_link_tag :syntax, :site %>
    <%= javascript_include_tag :all %>

    <%= # child layouts can inject code into the head via using content_for :head
    yield_content :head
    %>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>

  <body>
    <%= partial "partials/header_site.erb" %>

    <main class="wrap <%= page_classes %>">
      <section class="content"><%= yield %></section>
      <%= partial "partials/sidebar.erb" %>
    </main>

    <%= partial "partials/footer.erb" %>
  </body>
</html>
