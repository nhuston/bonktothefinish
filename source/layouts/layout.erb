<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
      <%= # Use title if it's in the page YAML frontmatter
      if current_page.data.dig(:title) then
        current_page.data.title
      else
        "BonkToTheFinish"
      end
      %>
    </title>


    <%= partial "partials/google_analytics.html" %>
    <%= partial "partials/email_subscribe_popup.erb" %>

    <!-- asset links -->
    <%= stylesheet_link_tag :syntax, :site %>
    <%= javascript_include_tag :all %>

    <%= # child layouts can inject code into the head via using content_for :head
    yield_content :head
    %>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
  </head>

  <body class="<%= page_classes %>">
    <header class="site-header-banner">
      <%
      #choose the image to display as the site banner
      header_img = "/images/site-header-img.jpg"
      if current_page.data.dig(:header_img) then
        header_img = current_page.data.header_img
      end
      %>
      <img class="site-header-image" src="<%= header_img %>" alt="Site Header Image"/>
      <%= partial "partials/navbar.erb" %>
    </header>

    <div role="main" class="wrap">
      <section class="main">
        <%= yield %>
      </section>
      <%= partial "partials/sidebar.erb" %>
    </div>

    <%= partial "partials/footer.erb" %>
  </body>
</html>
