<%
img_caption ||= ""
alt ||= ""

#strip extension off artcile link to get folder path
url = current_article.url
url_without_ext = url[0..url.length-6]

#determine if image is external or internal
prefix = src[0..6]
if prefix != "http://" and prefix != "https:/" then
  #link is not external - add prefix to img src
  src = "/images#{url_without_ext}/#{src}"
end
%>

{::nomarkdown}
<figure>
  <img src="<%= src %>" alt="<%= alt %>">
  <figcaption><%= img_caption %></figcaption>
</figure>
{:/}
