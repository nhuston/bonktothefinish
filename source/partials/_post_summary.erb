<%
summary_len ||= 150
img_url = article.data.dig(:header,:img_url) ? article.data.header.img_url : "/images/icons/write.svg"
classes||=""
%>

<section class="post_summary <%= classes %>">
  <aside>
    <img src="<%= get_article_img(article.tags) %>" class="article-type" alt="Article Icon"/>

    <!-- tags -->
    <%= partial "partials/tags.erb", locals: {
      tags: article.tags }  %>
  </aside>

  <article>
    <h2><%= link_to article.title, article %> </h2>
    <time><%= article.date.strftime("%B %e, %Y") %></time>
    <%=
    article.summary(summary_len)
    #article.body
    %>
    </article>
</section>
