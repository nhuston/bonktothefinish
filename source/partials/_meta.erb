<%

if current_page.data.dig(:description) then
  description = current_page.data.description
elsif current_article then
  description = Nokogiri::HTML(current_article.summary(155)).text
else
  description = config[:site_description]
end

if current_page.data.dig(:author) then
  author = current_page.data.author
else
  author = "Nicole Huston"
end

if current_page.data.dig(:title) then
  title = current_page.data.title
else
  title = "BonkToTheFinish - Races, Discounts, Growth"
end

keywords = ""
if current_page.data.dig(:keywords) then
  keywords += current_page.data.keywords
end
if current_page.data.dig(:tags) then
  keywords += current_page.data.tags
end
if keywords == ""
  keywords = "Ulta Running, Trail Running, Race, Run, Dog, Bonk, Finish, Training, Fitness"
end
%>



<meta charset="utf-8" />
<meta name="msvalidate.01" content="AB78AB7D6102878C98F48C38B79A990E" /> <!-- Bing validation -->
<meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
<meta name="viewport" content="width=device-width, initial-scale=1">

<meta name="description" content="<%= description %>">
<meta name="keywords" content="<%= keywords %>">
<meta name="author" content="<%= author %>">

<link rel="shortcut icon" type="image/x-icon" href="/favicon.ico?" />
<title><%= title %></title>


<%= partial "partials/ogp.erb", locals: {
    title: title,
    description: description,
    author: author } %>
