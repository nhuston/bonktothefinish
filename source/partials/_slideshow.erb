<% slide_id = "slideshow_id"+String(Random.rand(1000000)) %>

<!-- Container for the image gallery -->
<div class="slideshow-container" id="<%= slide_id %>">

  <!-- Full-width images with number text -->
  <% images.each_with_index do |img, i| %>
    <div class="mySlides">
      <div class="numbertext"><%= i+1 %> / <%= images.length%></div>
      <img src="<%=img[:url]%>" alt="<%img[:alt]%>" style="width:100%">
    </div>
  <% end %>

  <!-- Next and previous buttons -->
  <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
  <a class="next" onclick="plusSlides(1)">&#10095;</a>

  <!-- Image text -->
  <div class="caption-container">
    <p id="caption"></p>
  </div>

  <!-- Thumbnail images -->
  <div class="row">
    <% images.each_with_index do |img, i| %>
      <div class="column">
        <% active = if i==0 then "active" else "" end %>
        <img class="demo cursor <%= active %>" src="<%=img[:url]%>" style="width:100%" onclick="currentSlide(<%= i %>)" alt="<%= img[:alt] %>">
      </div>
    <% end %>
  </div>
</div>


